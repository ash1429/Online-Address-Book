<% include partials/header %>
<div class="container cont_container">
  <h1>Hello <%= v_contacts[0].owner.name %></h1>
  
  <form action="/contacts" method="GET" class="form-inline" style="float:left">
    <div class="form-group">
      <input type="text" name="search" placeholder="Name..." class="form-control">
      <input type="submit" value="Search" class="btn btn-default">
    </div>
  </form>
  <a href="/download" class="btn btn-warning pull-right">Download All</a>
</div>


<div class="container cont_container" style="margin-top: 20px">
  <label >Contacts</label>
  <hr>
  <% v_contacts[0].acquiantances.forEach(acquiantance => { %>
  <div class="row">
    <div class="col-md-8">
      <p><%= acquiantance.name %> </p>    
    </div>
    <div class="col-md-4">
      <a href="/<%= v_contacts[0].owner.name%>/<%= acquiantance._id %>" class="btn btn-primary pull-right">Details</a>
    </div>
    
  </div>
  <% }); %>

  
</div><!-- container ends -->

<% include partials/footer %>