<% include partials/header %>
<h1>Here we add contact</h1>
<div class="container new_HeadContain">
  <h1>Update:</h1>
  <form class="new_Form" action="/show/<%= v_acquiantance._id %>" method="POST">
    <div class="form-group">
      <label for="name">Name: </label>
      <input type="text" class="form-control" name="name" id="name" value="<%= v_acquiantance.name %>" >
    </div>

    <div class="form-group">
      <label for="email">Email: </label>
      <input type="email" class="form-control" name="email" id="email" value="<%= v_acquiantance.email %>">
    </div>
    <!-- phone no -->
    <div>
      <label>Phone no. </label>
      <button class="btn btn-primary pull-right" id="add_btn" type="button">+</button>
    </div>
<!-- foreach -->
    <% v_acquiantance.phone.forEach(a_number => { %>
    <div id="parent">
      <div class="form-group">
        <input type="number" class="form-control" name="phone[]" value="<%= a_number %>">
      </div>
    </div>
    <% }); %>
    <!-- phone no -->

    <input type="submit" class="btn btn-primary btn-lg btn-block" value="Post">
  </form>
</div>

<script src="/scripts/script.js"></script>

<% include partials/footer %>